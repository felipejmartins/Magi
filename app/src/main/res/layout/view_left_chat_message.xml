<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    tools:context="br.com.pitang.themagi.ChatActivity">

    <ImageView
        android:id="@+id/incoming_background"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/shape_bg_incoming_bubble"
        />

    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/message_ballon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_bubble"
        android:padding="5dp"
        android:gravity="left"
        android:textColor="@color/white"
        tools:text="Curabitur sollicitudin, est in dignissim commod"/>

</RelativeLayout>
