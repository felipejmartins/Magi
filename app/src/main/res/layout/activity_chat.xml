<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    tools:context="br.com.pitang.themagi.ChatActivity">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/chat_list"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/user_input_container"
        android:layout_height="wrap_content"/>



    <RelativeLayout
        android:id="@+id/user_input_container"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@color/gray"/>

        <EditText
            android:id="@+id/user_text_input"
            android:layout_toLeftOf="@+id/send_text_input"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="@string/chat_user_input_hint"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/send_text_input"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:backgroundTint="@color/old_brick"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_send_vector"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>
